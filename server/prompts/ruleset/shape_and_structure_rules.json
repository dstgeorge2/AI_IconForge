{
  "rule_module": "shape_and_structure_rules",
  "style": "geometric",
  "shape_philosophy": {
    "primary_principle": "Use universal geometric primitives that communicate clearly",
    "geometric_reduction": "Reduce complex forms to essential recognizable shapes",
    "metaphor_strength": "Choose strongest metaphor over aesthetic appeal"
  },
  "imperfection_policy": {
    "allow_micro_asymmetry": true,
    "no_grid_violation": true,
    "rationale": "Slight asymmetry for optical balance is allowed, but grid alignment is mandatory"
  },
  "element_hierarchy": {
    "primary_required": true,
    "supporting_limit": 2,
    "decorative_limit": 1,
    "rationale": "Focus on primary shape with minimal supporting elements to maintain clarity"
  },
  "shape_primitives": {
    "preferred": ["rectangle", "circle", "line", "triangle"],
    "complex_paths": "allowed_when_necessary",
    "bezier_curves": "minimal_use",
    "rationale": "Simple primitives scale better and are more universally recognizable"
  },
  "decoration_rules": {
    "sparkles": {
      "allowed": true,
      "shape": "four_point_star",
      "rotation_range": [15, 30],
      "max_count": 3,
      "size_range": ["2dp", "4dp"],
      "usage": "creation, new, magical actions only"
    },
    "dots": {
      "allowed": true,
      "style": "circle_or_soft_square",
      "max_count": 5,
      "size_range": ["1dp", "1.5dp"],
      "usage": "status indicators, multiplicity, activity"
    },
    "connection_points": {
      "allowed": true,
      "style": "small_circles",
      "max_count": 4,
      "size": "2dp",
      "usage": "network nodes, connection interfaces"
    }
  },
  "composition_rules": {
    "balance": "optical_not_mathematical",
    "weight_distribution": "primary_shape_dominant",
    "visual_hierarchy": "size_and_positioning",
    "breathing_room": "minimum_2dp_between_elements"
  },
  "metaphor_guidelines": {
    "universal_symbols": {
      "house": "triangle_roof_plus_rectangle_base",
      "document": "rectangle_with_folded_corner",
      "folder": "trapezoid_with_tab",
      "user": "circle_head_plus_body",
      "settings": "gear_with_teeth",
      "search": "magnifying_glass",
      "add": "plus_sign_or_cross",
      "edit": "pencil_or_pen",
      "delete": "x_mark_or_trash",
      "save": "down_arrow_or_disk",
      "open": "folder_opening_or_arrow",
      "close": "x_mark_or_folder_closing"
    },
    "avoid_ambiguous": ["abstract_shapes", "region_specific_symbols", "brand_specific_elements"],
    "cultural_universality": "Test metaphors across different cultural contexts"
  },
  "validation_criteria": [
    "Primary shape is immediately recognizable",
    "Supporting elements enhance rather than distract",
    "Decorations serve functional purpose",
    "Overall composition is balanced",
    "Metaphor is culturally universal",
    "Shape complexity appropriate for target size"
  ]
}