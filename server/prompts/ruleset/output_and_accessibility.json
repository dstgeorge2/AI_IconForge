{
  "rule_module": "output_and_accessibility",
  "export_formats": {
    "primary": "SVG",
    "secondary": ["ReactComponent", "Figma", "PNG"],
    "rationale": "SVG is vector-based and infinitely scalable, ideal for UI icons"
  },
  "export_sizes": {
    "required": ["16dp", "24dp"],
    "optional": ["20dp", "32dp", "40dp", "48dp", "64dp"],
    "rationale": "16dp and 24dp are most common UI sizes, others for specific use cases"
  },
  "accessibility_requirements": {
    "contrast_ratio_min": "4.5:1",
    "contrast_standard": "WCAG 2.1 AA",
    "color_independence": true,
    "screen_reader_compatible": true,
    "keyboard_navigation_ready": true,
    "rationale": "Icons must be accessible to users with disabilities"
  },
  "color_constraints": {
    "default_color": "#000000",
    "allow_fill": false,
    "allow_color_variants": false,
    "monochrome_only": true,
    "rationale": "Monochrome icons are more versatile and accessible"
  },
  "svg_optimization": {
    "viewbox_required": "0 0 24 24",
    "remove_unnecessary_groups": true,
    "optimize_paths": true,
    "minimize_file_size": true,
    "preserve_accessibility": true
  },
  "filename_conventions": {
    "format": "snake_case",
    "include_size": false,
    "include_variant": false,
    "examples": ["add_user", "edit_document", "delete_file"],
    "rationale": "Consistent naming improves developer experience"
  },
  "metadata_requirements": {
    "title": "required",
    "description": "required", 
    "keywords": "optional",
    "category": "required",
    "usage_context": "optional"
  },
  "react_component_specs": {
    "prop_types": ["size", "color", "className"],
    "default_props": {
      "size": "24",
      "color": "currentColor",
      "className": ""
    },
    "accessibility_props": ["aria-label", "role", "focusable"],
    "typescript_support": true
  },
  "figma_compatibility": {
    "component_structure": "single_frame",
    "naming_convention": "Icon/ActionName",
    "auto_layout": false,
    "constraints": "scale",
    "export_settings": "SVG_optimized"
  },
  "validation_criteria": [
    "SVG validates against W3C standards",
    "Meets contrast ratio requirements",
    "Functions without color information",
    "Scales cleanly to all target sizes",
    "Follows naming conventions",
    "Includes proper metadata",
    "Compatible with screen readers"
  ],
  "quality_assurance": {
    "automated_tests": [
      "contrast_ratio_check",
      "svg_validation",
      "size_scaling_test",
      "accessibility_audit"
    ],
    "manual_reviews": [
      "visual_clarity_at_16dp",
      "metaphor_recognition",
      "cultural_sensitivity",
      "brand_consistency"
    ]
  },
  "error_handling": {
    "missing_viewbox": "add_default_24x24",
    "invalid_svg": "regenerate_with_corrections",
    "accessibility_failure": "enhance_contrast_and_structure",
    "size_scaling_issues": "optimize_for_small_sizes"
  }
}